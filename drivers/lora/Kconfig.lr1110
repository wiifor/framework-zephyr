	select HAS_SEMTECH_RADIO_DRIVERS
	select HAS_SEMTECH_LR1110 if $(dt_compat_enabled,$(DT_COMPAT_SEMTECH_LR1110))
	depends on SPI
	help
	  Enable LoRa driver for Semtech LR1110.